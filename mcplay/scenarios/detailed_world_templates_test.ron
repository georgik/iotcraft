(
    scenario: "detailed_world_templates_test",
    description: "Detailed test of world template system with verbose output",
    clients: [
        (
            id: "test_client",
            executable: "../desktop-client/target/debug/iotcraft-dekstop-client",
            args: ["--mcp", "--mqtt-port", "9876", "--player-name", "TestPlayer"],
            mcp_port: 8765,
        ),
    ],
    steps: [
        (
            name: "mcp_initialize",
            description: "Initialize MCP connection",
            client: "test_client",
            action: "mcp_call",
            tool: "initialize",
            arguments: {},
            wait_for_response: true,
            timeout: 30.0,
        ),
        (
            name: "list_world_templates_verbose",
            description: "List available world templates with verbose output",
            client: "test_client",
            action: "mcp_call",
            tool: "list_world_templates",
            arguments: {},
            wait_for_response: true,
            timeout: 10.0,
        ),
        (
            name: "create_creative_world",
            description: "Create world with creative template",
            client: "test_client",
            action: "mcp_call",
            tool: "create_world",
            arguments: {
                "world_name": "CreativeTestWorld",
                "description": "A creative world for testing",
                "template": "creative",
            },
            wait_for_response: true,
            timeout: 15.0,
        ),
        (
            name: "create_modern_world",
            description: "Create world with modern template",
            client: "test_client",
            action: "mcp_call",
            tool: "create_world",
            arguments: {
                "world_name": "ModernTestWorld",
                "description": "A modern world for testing",
                "template": "modern",
            },
            wait_for_response: true,
            timeout: 15.0,
        ),
    ],
)
