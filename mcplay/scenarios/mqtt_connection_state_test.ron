// MQTT Connection State Test
// Validates that MQTT connection is established and working
(
  name: "MQTT Connection State Test",
  description: "Test MQTT server startup, Alice client connection, and MQTT state validation",
  version: "1.0",
  
  infrastructure: (
    mqtt_server: (
      required: true,
      port: 1883,
      config_file: None,
      options: None,
    ),
    mqtt_observer: Some((
      required: true,
      topics: Some([
        "iotcraft/worlds/+/info",
        "iotcraft/worlds/+/data",
        "home/+/light",
        "home/sensor/temperature",
        "devices/announce",
        "#"  // Catch all for debugging
      ]),
      client_id: Some("mqtt_state_observer"),
    )),
    mcp_server: None,
    services: None,
  ),
  
  clients: [
    (
      id: "alice",
      player_id: "alice",
      mcp_port: 3001,
      client_type: "desktop",
      name: Some("Alice - MQTT State Test Client"),
      config: Some({
        "enable_mcp": true,
        "readiness_probe": {
          "type": "tcp_port",
          "port": 3001,
          "initial_delay_seconds": 8,  // Extra time for MQTT connection
          "timeout_seconds": 25
        },
        "liveness_probe": {
          "type": "mcp_ping",
          "interval_seconds": 120,
          "timeout_seconds": 15,
          "failure_threshold": 5
        }
      }),
    )
  ],
  
  steps: [
    // Step 1: Basic connectivity test
    (
      name: "alice_ping",
      description: "Alice tests MCP connectivity",
      client: "alice",
      action: (
        type: "mcp_call",
        tool: "ping",
        arguments: {},
      ),
      depends_on: [],
      wait_before: 3000,  // Allow more time for Core MQTT Service to initialize
      wait_after: 2000,
      timeout: 15000,
      success_condition: None,
    ),
    
    // Step 2: Get client info to verify capabilities
    (
      name: "alice_client_info",
      description: "Alice gets client information including MQTT capabilities",
      client: "alice",
      action: (
        type: "mcp_call",
        tool: "get_client_info",
        arguments: {},
      ),
      depends_on: ["alice_ping"],
      wait_before: 1000,
      wait_after: 2000,
      timeout: 15000,
      success_condition: None,
    ),
    
    // Step 3: CRITICAL - Get MQTT connection status
    (
      name: "alice_mqtt_status",
      description: "ðŸš¨ CRITICAL: Alice checks MQTT connection status via Core MQTT Service",
      client: "alice",
      action: (
        type: "mcp_call",
        tool: "get_mqtt_status",
        arguments: {},
      ),
      depends_on: ["alice_client_info"],
      wait_before: 1000,
      wait_after: 5000,  // Extended wait to observe MQTT traffic and connection state
      timeout: 20000,
      success_condition: None,
    ),
  ],
  
  config: Some((
    timeout_ms: Some(120000),  // 2 minutes
    logging: None,
    environment: None,
    settings: Some({
      "auto_cleanup": true,
      "preserve_logs": true,
    }),
  )),
)
