(
  name: "Alice (Desktop) & Bob (WASM) Multi-Platform - Automated",
  description: "Alice creates a world on desktop client while Bob joins via web browser. This version automatically starts the WASM web server for Bob using ctask commands.",
  version: "1.0",
  infrastructure: (
    mqtt_server: (
      required: true,
      port: 1883,
      config_file: None,
      options: None,
    ),
    mqtt_observer: Some((
      required: true, 
      topics: Some(["#"]),
      client_id: Some("cross_platform_observer"),
    )),
    mcp_server: None,
    services: None,
  ),
  clients: [
    (
      id: "alice",
      player_id: "alice_desktop",
      mcp_port: 3001,
      client_type: "desktop",
      name: Some("Alice - Desktop Host"),
      config: Some({
        "enable_mcp": true,
        "readiness_probe": {
          "type": "tcp_port", 
          "port": 3001,
          "initial_delay_seconds": 5,
          "timeout_seconds": 20
        },
        "liveness_probe": {
          "type": "mcp_ping",
          "interval_seconds": 30,
          "timeout_seconds": 10,
          "failure_threshold": 5
        }
      }),
    ),
    // Note: Bob runs in browser via automated web server
    // Web server will be started automatically in this scenario
  ],
  steps: [
    // Step 1: Build WASM client for Bob
    (
      name: "build_bob_wasm_client",
      description: "Build the WASM client for Bob (this takes ~7 minutes)",
      client: "",  // Infrastructure step
      action: (
        type: "custom",
        action_type: "shell_command",
        parameters: {
          "command": "cargo",
          "args": ["ctask", "web-build", "--release"],
          "working_directory": "../desktop-client",
          "description": "Building WASM client for Bob",
          "timeout_seconds": 600,  // 10 minutes for WASM build
        },
      ),
      depends_on: [],
      wait_before: 1000,
      wait_after: 3000,
      timeout: 660000,  // 11 minutes total
      success_condition: None,
    ),
    
    // Step 2: Start web server for Bob
    (
      name: "start_bob_web_server",
      description: "Start web server for Bob's WASM client at http://localhost:8000",
      client: "",  // Infrastructure step
      action: (
        type: "custom",
        action_type: "background_process",
        parameters: {
          "command": "cargo",
          "args": ["ctask", "web-serve", "--port", "8000"],
          "working_directory": "../desktop-client",
          "description": "Web server for Bob's WASM client",
          "port_check": 8000,
          "wait_for_ready": true,
        },
      ),
      depends_on: ["build_bob_wasm_client"],
      wait_before: 2000,
      wait_after: 5000,  // Wait for server to start
      timeout: 30000,
      success_condition: None,
    ),

    // Step 3: Alice checks her client status
    (
      name: "alice_client_check",
      description: "Alice verifies her desktop client is ready",
      client: "alice",
      action: (
        type: "mcp_call",
        tool: "get_client_info",
        arguments: {},
      ),
      depends_on: [],
      wait_before: 3000,  // Wait for Alice to be ready
      wait_after: 2000,
      timeout: 20000,
      success_condition: None,
    ),
    
    // Step 4: Alice creates a cross-platform test world
    (
      name: "alice_create_cross_platform_world",
      description: "Alice creates a new world for cross-platform testing",
      client: "alice",
      action: (
        type: "mcp_call",
        tool: "create_world",
        arguments: {
          "world_name": "cross_platform_test_world",
          "description": "A test world for Alice (desktop) and Bob (WASM) cross-platform multiplayer",
          "template": "default",
        },
      ),
      depends_on: ["alice_client_check"],
      wait_before: 2000,
      wait_after: 5000,   // Wait for world creation and auto state transition
      timeout: 30000,
      success_condition: None,
    ),
    
    // Step 5: Alice builds some initial content
    (
      name: "alice_build_welcome_structure",
      description: "Alice places some blocks to welcome Bob to the cross-platform world",
      client: "alice",
      action: (
        type: "mcp_call",
        tool: "create_wall",
        arguments: {
          "block_type": "grass",
          "x1": 0,
          "y1": 1,
          "z1": 0,
          "x2": 10,
          "y2": 1,
          "z2": 0,
        },
      ),
      depends_on: ["alice_create_cross_platform_world"],
      wait_before: 2000,
      wait_after: 2000,
      timeout: 15000,
      success_condition: None,
    ),
    
    (
      name: "alice_add_welcome_tower",
      description: "Alice builds a tower to mark the spawn area",
      client: "alice",
      action: (
        type: "mcp_call",
        tool: "create_wall",
        arguments: {
          "block_type": "stone",
          "x1": 5,
          "y1": 2,
          "z1": 0,
          "x2": 5,
          "y2": 5,
          "z2": 0,
        },
      ),
      depends_on: ["alice_build_welcome_structure"],
      wait_before: 1000,
      wait_after: 2000,
      timeout: 15000,
      success_condition: None,
    ),
    
    // Step 6: Alice publishes her world for multiplayer
    (
      name: "alice_publish_cross_platform_world", 
      description: "Alice publishes her world for Bob (WASM) to join",
      client: "alice",
      action: (
        type: "mcp_call",
        tool: "publish_world",
        arguments: {
          "world_name": "cross_platform_test_world",
          "max_players": 4,
          "is_public": true,
        },
      ),
      depends_on: ["alice_add_welcome_tower"],
      wait_before: 2000,
      wait_after: 5000,   // Wait for world to be published and MQTT propagation
      timeout: 25000,
      success_condition: None,
    ),
    
    // Step 7: Verify Alice's multiplayer status
    (
      name: "alice_check_multiplayer_hosting",
      description: "Alice verifies she is hosting the world for cross-platform play",
      client: "alice",
      action: (
        type: "mcp_call",
        tool: "get_multiplayer_status",
        arguments: {},
      ),
      depends_on: ["alice_publish_cross_platform_world"],
      wait_before: 2000,
      wait_after: 2000,
      timeout: 15000,
      success_condition: None,
    ),
    
    // Step 8: Open browser for Bob (macOS-specific)
    (
      name: "open_browser_for_bob",
      description: "Automatically open browser for Bob's WASM client",
      client: "",  // Infrastructure step
      action: (
        type: "custom",
        action_type: "shell_command",
        parameters: {
          "command": "open",
          "args": ["http://localhost:8000"],
          "description": "Opening browser for Bob's WASM client",
          "timeout_seconds": 10,
        },
      ),
      depends_on: ["alice_check_multiplayer_hosting", "start_bob_web_server"],
      wait_before: 2000,
      wait_after: 3000,
      timeout: 15000,
      success_condition: None,
    ),
    
    // Step 9: Wait for manual Bob interaction via browser
    (
      name: "manual_bob_browser_interaction",
      description: "‚ú® READY FOR CROSS-PLATFORM TESTING! ‚ú®

üñ•Ô∏è  Alice (Desktop): Hosting world 'cross_platform_test_world'
üåê Bob (WASM): Browser should be open at http://localhost:8000

üìã Manual Steps for Bob:
   1. Browser should have opened automatically to http://localhost:8000
   2. Click 'Enter World' in main menu
   3. Look for Alice's published world 'cross_platform_test_world'
   4. Join the world to test cross-platform multiplayer
   5. Test building, movement, and interaction between desktop and web clients

üéÆ Both clients share the same MQTT infrastructure for real-time sync!
‚è≥ Press Ctrl+C when cross-platform testing is complete.",
      client: "alice",
      action: (
        type: "wait_condition",
        condition: "manual_cross_platform_testing_complete",
        expected_value: Some("never_reached"),
        timeout: 3600000,  // 1 hour timeout as safety
      ),
      depends_on: ["open_browser_for_bob"],
      wait_before: 2000,
      wait_after: 0,
      timeout: 7200000,  // 2 hours max for manual testing
      success_condition: None,
    ),
  ],
  config: Some((
    timeout_ms: Some(7200000),  // 2 hours max runtime for extended testing
    logging: Some((
      level: Some("info"),
      log_mqtt: Some(true),
      log_client_actions: Some(true),
      filters: Some([
        "cross-platform/*", 
        "wasm/*",
        "web-server/*",
        "world/*", 
        "mcp/*", 
        "alice", 
        "bob",
        "desktop",
        "browser",
        "publish",
        "InGame",
        "shell_command",
        "background_process",
      ]),
    )),
    environment: Some({
      "RUST_LOG": "info,iotcraft_desktop_client=debug",
      "SCENARIO_NAME": "alice_desktop_bob_wasm_automated",
      "ENABLE_MCP": "true",
      "MULTIPLAYER_MODE": "enabled",
      "CROSS_PLATFORM_TEST": "true",
      "WASM_BUILD_MODE": "release",
      "AUTO_OPEN_BROWSER": "true",
    }),
    settings: Some({
      "auto_cleanup": true,
      "preserve_logs": true,
      "manual_testing_mode": true,
      "fail_fast": false,  // Continue even if non-critical steps fail
      "extended_session": true,
      "cross_platform_test": true,
      "automated_web_server": true,
    }),
  )),
)
