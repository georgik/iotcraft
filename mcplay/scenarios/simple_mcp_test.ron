( 
  name: "Simple MCP Test",
  description: "Basic test to verify MCP connectivity works",
  version: "1.0",
  infrastructure: (
    mqtt_server: (
      required: true,
      port: 1883,
      config_file: None,
      options: None,
    ),
    mqtt_observer: Some((
      required: true, 
      topics: Some(["#"]),
      client_id: Some("observer_simple_test"),
    )),
    mcp_server: None,
    services: None,
  ),
  clients: [
    (
      id: "alice",
      player_id: "alice",
      mcp_port: 3001,
      client_type: "desktop",
      name: Some("Alice - Simple MCP Test"),
      config: Some({
        "enable_mcp": true,
        "readiness_probe": {
          "type": "tcp_port", 
          "port": 3001,
          "initial_delay_seconds": 5,
          "timeout_seconds": 10
        },
        "liveness_probe": {
          "type": "mcp_ping",
          "interval_seconds": 60,
          "timeout_seconds": 10,
          "failure_threshold": 5
        }
      }),
    )
  ],
  steps: [
    // Test basic MCP ping
    (
      name: "alice_ping",
      description: "Test basic MCP ping",
      client: "alice",
      action: (
        type: "mcp_call",
        tool: "ping",
        arguments: {},
      ),
      depends_on: [],
      wait_before: 2000,
      wait_after: 2000,
      timeout: 10000,
      success_condition: None,
    ),
    
    // Test get_client_info
    (
      name: "alice_get_client_info",
      description: "Test get_client_info MCP command",
      client: "alice",
      action: (
        type: "mcp_call",
        tool: "get_client_info",
        arguments: {},
      ),
      depends_on: ["alice_ping"],
      wait_before: 1000,
      wait_after: 2000,
      timeout: 15000,
      success_condition: None,
    ),
    
    // Test get_game_state
    (
      name: "alice_get_game_state",
      description: "Test get_game_state MCP command",
      client: "alice",
      action: (
        type: "mcp_call",
        tool: "get_game_state",
        arguments: {},
      ),
      depends_on: ["alice_get_client_info"],
      wait_before: 1000,
      wait_after: 1000,
      timeout: 15000,
      success_condition: None,
    ),
  ],
  config: Some((
    timeout_ms: Some(120000),  // 2 minutes max runtime
    logging: None,
    environment: None,
    settings: Some({
      "cleanup_on_exit": true,
      "keep_logs": true
    }),
  )),
)
