{
  "name": "simple_test",
  "description": "Basic test scenario with one client placing a block",
  "version": "1.0",
  "clients": [
    {
      "id": "alice",
      "player_id": "alice",
      "mcp_port": 3001,
      "type": "desktop"
    }
  ],
  "infrastructure": {
    "mqtt_server": {
      "required": true,
      "port": 1883
    },
    "mqtt_observer": {
      "required": false
    }
  },
  "steps": [
    {
      "name": "alice_places_block",
      "description": "Alice places a grass block",
      "client": "alice",
      "action": {
        "type": "mcp_call",
        "tool": "place_block",
        "arguments": {
          "block_type": "grass",
          "x": 0,
          "y": 1,
          "z": 0
        }
      },
      "wait_before": 1000,
      "wait_after": 500,
      "timeout": 5000,
      "success_condition": {
        "type": "mcp_response",
        "expected": "success"
      }
    }
  ],
  "synchronization": [],
  "validation": {
    "final_checks": [
      {
        "type": "block_state",
        "description": "Verify block was placed",
        "coordinates": [0, 1, 0],
        "expected_block": "grass"
      }
    ]
  },
  "cleanup": {
    "unpublish_worlds": false,
    "reset_client_state": false,
    "clear_mqtt_topics": false
  }
}
